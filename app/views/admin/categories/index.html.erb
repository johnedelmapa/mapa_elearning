<div class="row">
    <div class="col-12 mt-5">

        <div class="row">
            <div class="col-sm">
                <h1>Categories</h1>
            </div>
            <div class="col-sm">
                <%= link_to "New category", new_admin_category_path , class: "btn btn-info float-right"%>
            </div>
        </div>
              
        <table class="table mt-3 table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |category| %>
                    <tr>
                        <td><%= link_to category.title, "#" %></td>
                        <td><%= category.description %></td>
                        <td>
                            <%= link_to 'Edit', edit_admin_category_path(category) %> /
                            <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are your sure?"} %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <%= link_to 'Back', admin_home_path, class: "btn btn-primary" %>
    </div>    
</div>

<div class="paginate text-center">
    <%= will_paginate %>
</div>