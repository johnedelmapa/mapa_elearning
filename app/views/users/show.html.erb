<div class="container mt-5">
	<div class="row">
		<div class="col-lg-3">
			<div class="card">
				<div class="card-body text-center">
                    <div class="container">
                        <%= user_avatar(@user, 'profile-photo') %>
                        <%= @user.name %>
                        <hr>
                        <div class="row">
                            <div class="col-lg-6">
                                <strong><%= link_to @user.following.count, "#" %></strong>
                                <div>following</div>
                            </div>
                            <div class="col-lg-6">
                                <strong><%= link_to @user.followers.count, "#" %></strong>
                                <div>followers</div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-lg-12">
                                <strong><%= link_to "#", "#" %></strong>
                                <div>Words learned</div>
                            </div>
                        </div>
                    </div>


                    <div class="card-body text-center">
                        <% if current_user != @user %>
                            <% unless current_user.following?(@user) %>
                                <%= form_for(current_user.active_relationships.build) do |f| %>
                                <div><%= hidden_field_tag :followed_id, @user.id %></div>
                                <%= f.submit "Follow", class: "btn btn-primary" %>
                                <% end %>
                            <% else %>
                                <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
                                html: { method: :delete }) do |f| %>
                                <%= f.submit "Unfollow", class: "btn btn-danger" %>
                                <% end %>
                            <% end %>
                        <% end %>
                    </div>


                    <div class="card-body text-center">
                        <% if @user.admin? && current_user == @user %>
                            <%= link_to 'Administration', admin_home_path , class: "btn btn-dark btn-lg"%>
                        <% end %>
                    </div>
                </div>
			</div>
		</div>
		<div class="col-lg-9">
			<div class="card">
				<div class="card-header">
                    <h6>Activity Feed</h6>
				</div>
				<div class="card-body">

 				</div>
			</div>
		</div>
	</div>
</div> 