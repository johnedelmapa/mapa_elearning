<div class="container mt-5">
	<div class="row">
		<div class="col-lg-3">
			<div class="card">
				<div class="card-body text-center">
                    <div class="container">
                        <%= user_avatar(current_user, 'profile-photo') %>
                        <%= current_user.name %>
                        <hr>
                        <div class="row">
                            <div class="col-lg-6">
                                <strong><%= current_user.following.count %></strong>
                                <div>following</div>
                            </div>
                            <div class="col-lg-6">
                                <strong><%= current_user.followers.count %></strong>
                                <div>followers</div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-lg-12">
                                <strong><%= link_to current_user.answers.count %></strong>
                                <div>Words Learned</div>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
		</div>
		<div class="col-lg-9">
			<div class="card">
				<div class="card-header">
                    <h6>Activity Feed</h6>
				</div>
				<div class="card-body">
                    <%= render 'shared/feed'%>
 				</div>
			</div>
		</div>
	</div>
</div> 